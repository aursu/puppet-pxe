<IfModule alias_module>
    # alias for kickstart configs and all other stuff
    Alias /centos <%= @storage_directory %>/centos
    Alias /ks     <%= @storage_directory %>/configs
    Alias /boot   <%= @tftp_root %>/boot

    <Directory "<%= @storage_directory %>">
        Require all granted
    </Directory>

    # run scripts from /exec directory
    ScriptAlias /exec/ <%= @storage_directory %>/exec/

    <Directory "<%= @storage_directory %>/exec">
        AllowOverride None
        Options None
    </Directory>

    <Directory "<%= @tftp_root %>/boot">
        Require all granted
    </Directory>
</IfModule>
