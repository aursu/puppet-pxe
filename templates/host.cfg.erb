kernel http://<%= @install_server %>/<%= @boot_kernel %> ip=dhcp ksdevice= inst.ks=http://<%= @install_server %>/ks/<%= @ks_filename %><% if @disable_biosdevname %> net.ifnames=0 biosdevname=0<% end %>
initrd http://<%= @install_server %>/<%= @boot_initimg %>
