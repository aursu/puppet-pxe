kernel http://<%= @install_server %>/<%= @boot_kernel %> ip=dhcp boot=casper url=http://<%= @install_server %>/ubuntu/<%= @major_version %>/<%= @iso_filename %> ds=nocloud-net;s=http://<%= @install_server %>/autoinstall/<%= @major_version %>/<%= @autofile_path %>/<% if @disable_biosdevname %> net.ifnames=0 biosdevname=0<% end %>
