#cloud-config
# See the autoinstall documentation at:
# https://canonical-subiquity.readthedocs-hosted.com/en/latest/reference/autoinstall-reference.html
autoinstall:
  apt:
    disable_components: []
    fallback: offline-install
    geoip: true
    mirror-selection:
      primary:
      - country-mirror
      - arches: &id001
        - amd64
        - i386
        uri: http://archive.ubuntu.com/ubuntu/
      - arches: &id002
        - s390x
        - arm64
        - armhf
        - powerpc
        - ppc64el
        - riscv64
        uri: http://ports.ubuntu.com/ubuntu-ports
    preserve_sources_list: false
    security:
    - arches: *id001
      uri: http://security.ubuntu.com/ubuntu/
    - arches: *id002
      uri: http://ports.ubuntu.com/ubuntu-ports
  codecs:
    install: false
  drivers:
    install: false
  identity:
    hostname: localhost
    username: aursu
  users:
    - username: aursu
      password: $6$kp.Nx6z3k5uaGKMu$MvlqbvyUhEK2RK0PdpKPthivLF4VuwLwpcHfKax0Zoa87nOz3GU0/x/w8pJsaRcjExOOCZtuD1aiZ2O2v0a.D1
      realname: Alexander Ursu
      groups: sudo
      shell: /bin/bash
      ssh_authorized_keys:
        - ssh-rsa  aursu
  kernel:
    package: linux-generic
  keyboard:
    layout: us
    toggle: null
    variant: ''
  locale: en_US.UTF-8
  network:
    ethernets:
      all:
        dhcp-identifier: mac
        dhcp4: true
        dhcp4-overrides:
            use-hostname: true  # Allow DHCP to override the short hostname
            use-domains: true   # Allow DHCP to override the FQDN
        match: {}
    version: 2
  oem:
    install: auto
  source:
    id: ubuntu-server
    search_drivers: false
  ssh:
    allow-pw: true
    install-server: true
  storage:
    config:
    - id: disk-0
      type: disk
      match: { "name": ".*" }  # Selects the first available disk (regardless of /dev/sda, /dev/nvme0n1, etc.)
      ptable: gpt
      wipe: superblock
      preserve: false
      grub_device: true
    - device: disk-0
      size: 1073741824
      wipe: superblock
      flag: boot
      number: 1
      preserve: false
      grub_device: true
      offset: 1048576
      id: partition-0
      type: partition
    - fstype: fat32
      volume: partition-0
      preserve: false
      id: format-0
      type: format
    - path: /boot/efi
      device: format-0
      id: mount-0
      type: mount
    - device: disk-0
      size: 1073741824
      wipe: superblock
      number: 2
      preserve: false
      grub_device: false
      id: partition-1
      type: partition
    - fstype: xfs
      volume: partition-1
      preserve: false
      id: format-1
      type: format
    - path: /boot
      device: format-1
      id: mount-1
      type: mount
    - device: disk-0
      size: 107374182400
      wipe: superblock
      number: 3
      preserve: false
      grub_device: false
      id: partition-2
      type: partition
    - fstype: xfs
      volume: partition-2
      preserve: false
      id: format-2
      type: format
    - path: /
      device: format-2
      id: mount-2
      type: mount
  updates: security
  version: 1
